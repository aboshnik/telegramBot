generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client-meta"
}

datasource db {
  provider = "sqlite"
  url      = env("META_DB_URL")
}

model DepartmentChannel {
  id         Int    @id @default(autoincrement())
  department String @unique
  channelId  String
}

model Admin {
  id          Int      @id @default(autoincrement())
  telegramId  BigInt   @unique
  telegramUsername String?
  createdAt   DateTime @default(now())
}

model AdminLog {
  id               Int      @id @default(autoincrement())
  action           String
  actorTelegramId  BigInt
  actorUsername    String?
  targetTelegramId BigInt?
  targetUsername   String?
  department       String?
  channelId        String?
  channelName      String?
  reason           String?
  createdAt        DateTime @default(now())
}

model AdminSettings {
  id            Int     @id @default(autoincrement())
  adminLogChatId String?
  newsChannelId  String?
}

model InviteLink {
  id           Int      @id @default(autoincrement())
  telegramId   BigInt
  url          String   @unique
  inviteLinkId String?
  channelId    String   @default("")
  expiresAt    DateTime
  ttlSeconds   Int
  status       String   @default("ACTIVE")
  createdAt    DateTime @default(now())
  usedAt       DateTime?

  @@index([telegramId, status, expiresAt])
}

model AuditLog {
  id          Int      @id @default(autoincrement())
  telegramId  BigInt
  action      String
  payloadJson String
  createdAt   DateTime @default(now())

  @@index([telegramId, action])
}

model EmployeeRef {
  id         Int      @id @default(autoincrement())
  fullName   String
  position   String
  department String
  phoneNumber String?
  fired      Boolean  @default(false)
  blacklisted Boolean @default(false)
  telegramId BigInt?  @unique
  telegramUsername String?
  active     Boolean  @default(true)
  users      User[]

  @@index([fullName, position, department])
  @@unique([fullName, position, department])
}

model User {
  id             Int           @id @default(autoincrement())
  telegramId     BigInt        @unique
  telegramUsername String?
  empId          Int?
  fullName       String
  phoneNumber    String?
  position       String
  department     String
  createdAt      DateTime      @default(now())
  lastVerifiedAt DateTime?
  employee       EmployeeRef?  @relation(fields: [empId], references: [id])
}

